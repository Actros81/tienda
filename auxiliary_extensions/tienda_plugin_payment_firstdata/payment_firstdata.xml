<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="tienda" method="upgrade">
	<name>First Data / Linkpoint</name>
	<version>0.5.6</version>
	<creationDate>August 2010</creationDate>
	<author>Dioscouri</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<copyright>2010 Dioscouri.com</copyright>
	<license>GNU General Public License v2</license>
	<description>This plugin enables First Data / Linkpoint payments</description>
	
	<files>
		<filename plugin="payment_firstdata">payment_firstdata.php</filename>
		<folder>payment_firstdata</folder>	
	</files>

	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_tienda_payment_firstdata.ini</language>
	</languages>

	<params addpath="/administrator/components/com_tienda/elements">
        <param name="login_id" type="text" size="50" default="" label="FIRSTDATA Login ID" description="FIRSTDATA Login ID Desc"/>
        <param name="tran_key" type="textarea" default="" label="FIRSTDATA Transaction Key" description="FIRSTDATA Transaction Key Desc" rows="5" cols="30" />
        <param name="md5_hash" type="text" size="50" default="" label="FIRSTDATA MD5 Hash" description="FIRSTDATA MD5 Hash Desc" />
        <param name="secure_post" type="radio" default="0" label="FIRSTDATA Secure Post" description="FIRSTDATA Secure Post Desc">
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>        
        <param type="spacer" />
        <param name="sandbox" type="radio" default="0" label="FIRSTDATA Use Sandbox" description="FIRSTDATA Use Sandbox Desc">
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>
        <param name="sandbox_login_id" type="text" size="50" default="" label="FIRSTDATA Sandbox Login ID" description="FIRSTDATA Sandbox Login ID Desc"/>
        <param name="sandbox_tran_key" type="textarea" default="" label="FIRSTDATA Sandbox Transaction Key" description="FIRSTDATA Sandbox Transaction Key Desc" rows="5" cols="30" />
        <param name="sandbox_md5_hash" type="text" size="50" default="" label="FIRSTDATA Sandbox MD5 Hash" description="FIRSTDATA Sandbox MD5 Hash Desc" />
        <param name="failed_order_state" type="tiendaorderstate" scope="com_tienda" default="10" label="Failed Order State" description="State to put the order in when the payment fails" />
   		<param name="payment_received_order_state" type="tiendaorderstate" scope="com_tienda" default="17" label="Payment Received Order State" description="State to put the order in when the payment goes well" />
	</params>
			
</install>