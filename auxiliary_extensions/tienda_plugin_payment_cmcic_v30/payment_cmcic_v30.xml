<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="tienda" method="upgrade">
    <name>Payment CMCIC v30 for Tienda</name>
    <version>beta1</version>
    <creationDate>September 2010</creationDate>
    <author>Val√©rie Isaksen</author>
    <authorEmail>alatak@alatak.net</authorEmail>
    <authorUrl>http://www.alatak.net</authorUrl>
    <copyright>2010 alatak.net</copyright>
    <license>GNU General Public License v2</license>
    <description>TIENDA_CMCIC_PAYMENT_PLUGIN_DESC</description>
	
    <files>
        <filename plugin="payment_cmcic">payment_cmcic.php</filename>
        <folder>payment_cmcic</folder>
    </files>

   <languages folder="language">        
   <language tag="en-GB">en-GB/en-GB.plg_tienda_payment_cmcic.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.plg_tienda_payment_cmcic.ini</language>
    </languages>

    <params addpath="/administrator/components/com_tienda/elements">
        
        <param name="payment_server" type="list" default="en" label="TIENDA_CMCIC_SERVER" description="TIENDA_CMCIC_SERVER_DESC">
            <option value="test">TIENDA_CMCIC_SERVER_TEST</option>
                        <option value="production">TIENDA_CMCIC_SERVER_PREPRODUCTION</option>
            <option value="preproduction">TIENDA_CMCIC_SERVER_PRODUCTION</option>
        </param>
        <param name="merchant_id" type="text" size="50" default="" label="TIENDA_CMCIC_MERCHANT_ID" description="TIENDA_CMCIC_MERCHANT_ID_DESC"/>
  
        <param name="cgi_path" type="text" size="50" default="" label="TIENDA_CMCIC_CGI" description="TIENDA_CMCIC_CGI_DESC"/>
        <param name="pathfile" type="text" size="50" default="" label="TIENDA_CMCIC_PATHFILE" description="TIENDA_CMCIC_PATHFILE_DESC"/>
        
       <param type="spacer" />
        <param name="payment_means_cmcic" type="radio" default="1" label="TIENDA_CMCIC_PAYMENT_MEANS_VISA" description="">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="payment_means_mastercard" type="radio" default="1" label="TIENDA_CMCIC_PAYMENT_MEANS_MASTERCARD" description="">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="payment_means_cb" type="radio" default="1" label="TIENDA_CMCIC_PAYMENT_MEANS_CB" description="">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="payment_means_amex" type="radio" default="0" label="TIENDA_CMCIC_PAYMENT_MEANS_AMEX" description="">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param type="spacer" />

        <param name="payment_mode" type="list" default="en" label="TIENDA_CMCIC_PAYMENT_MODE" description="TIENDA_CMCIC_PAYMENT_MODE_DESC">
            <option value="capture">TIENDA_CMCIC_PAYMENT_MODE_CAPTURE</option>
            <option value="validation">TIENDA_CMCIC_PAYMENT_MODE_VALIDATION</option>
        </param>
        <param name="payment_days" type="text" size="5" default="" label="TIENDA_CMCIC_PAYMENT_DAYS" description="TIENDA_CMCIC_PAYMENT_DAYS_DESC"/>
        <param type="spacer" />
        <param name="failed_order_state" type="tiendaorderstate" scope="com_tienda" default="10" label="TIENDA_CMCIC_FAILED_ORDER_STATE" description="State to put the order in when the payment fails" />
        <param name="payment_received_order_state" type="tiendaorderstate" scope="com_tienda" default="17" label="TIENDA_CMCIC_PAYMENT_RECEIVED_ORDER_STATE" description="TIENDA_CMCIC_PAYMENT_RECEIVED_ORDER_STATE_DESC" />

      <param type="spacer" />
        <param name="payment_cmcic_debug" type="radio" default="0" label="TIENDA_CMCIC_PAYMENT_DEGUG" description="TIENDA_CMCIC_PAYMENT_DEGUG_DESC">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>

    </params>
			
</install>