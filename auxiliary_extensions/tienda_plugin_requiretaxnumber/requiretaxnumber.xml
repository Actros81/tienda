<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="tienda" method="upgrade">
	<name>Tienda Plugin for Requiring Tax Number During Checkout</name>
	<version>0.6.2</version>
	<creationDate>October 2010</creationDate>
	<author>Weble</author>
	<authorEmail>info@weble.it</authorEmail>
	<authorUrl>http://www.weble.it</authorUrl>
	<copyright>2010 Weble Snc</copyright>
	<license>GNU General Public License v2</license>
	<description>This Plugin forces tax number to be required during checkout</description>
	
	<files>
		<filename plugin="requiretaxnumber">requiretaxnumber.php</filename>
		<folder>requiretaxnumber</folder>  	
	</files>

    <languages>
        <language tag="en-GB">languages/en-GB.plg_tienda_requiretaxnumber.ini</language>
        <language tag="it-IT">languages/it-IT.plg_tienda_requiretaxnumber.ini</language>
    </languages>
    
	<params>
		<param name="require_personal_id" type="list" default="1" label="Require Personal Id Number" description="Require Personal Id Number Desc">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="require_tax" type="list" default="1" label="Require Personal Tax Number" description="Require Personal Tax Number Desc">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
			
</install>