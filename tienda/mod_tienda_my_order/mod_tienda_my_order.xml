<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" position="left" method="upgrade">
    <name>Tienda - My Order</name>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <version>0.5.1</version>
    <creationDate>June 2010</creationDate>
    <copyright>2010 Dioscouri.com</copyright>
    <license>GNU General Public License</license>
    <description>Display a set of user order based on Parameters</description>
    
    <files>
        <filename module="mod_tienda_my_order">mod_tienda_my_order</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    
    
    <params addpath="/modules/mod_tienda_my_order/elements">

        
        <param type="spacer" />
        <param name="display_id" type="list" default="1" label="Show Id" description="Show ID of the Order ">
            <option value="1">ENABLED</option>
            <option value="0">DISABLED</option>
        </param>
        <param name="display_date" type="list" default="1" label="Show Date" description="Show Date Desc">
            <option value="1">ENABLED</option>
            <option value="0">DISABLED</option>
        </param>
        <param name="display_image_link" type="list" default="1" label="Link Image" description="Link Image Desc">
            <option value="1">ENABLED</option>
            <option value="0">DISABLED</option>
        </param>
       
        <param name="display_price" type="list" default="1" label="Show Price" description="Show Price Desc">
            <option value="1">ENABLED</option>
            <option value="0">DISABLED</option>
        </param>
       
        <param name="display_state" type="list" default="1" label="Show State" description="Show State">
            <option value="1">ENABLED</option>
            <option value="0">DISABLED</option>
        </param>

        <param name="max_number" type="text" default="" label="Max Number" description="MAX_NUMBER" />
        <param type="spacer" />
        <param name="display_style" type="list" default="flat" label="Display Style" description="Display Style Desc">
            <option value="flat">Column</option>
            <option value="grid">Grid</option>
        </param>
        <param name="display_grid_items" type="list" default="3" label="Grid Items" description="Grid Items Desc">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
        </param>
        <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
        <param type="spacer" />
        <param name="display_null" type="radio" default="1" label="Display No Oreders" description="Display No Orders Desc">
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>
        <param name="null_text" type="text" size="50" default="No Orders Set" label="No Order Set" description="No Orders Text Desc"></param>
    </params>
</install>