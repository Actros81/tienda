<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" position="left" method="upgrade">
    <name>Layered Navigation</name>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <version>0.9.0</version>
    <creationDate>October 2011</creationDate>
    <copyright>2012 Dioscouri.com</copyright>
    <license>GNU General Public License</license>
    <description>Layered navigation that allow users to filter products by any parameter they want</description>
    
    <files>
        <filename module="mod_tienda_layered_navigation">mod_tienda_layered_navigation.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>includes</folder>
    </files>
    
    <languages>
		<language tag="en-GB">languages/en-GB.mod_tienda_layered_navigation.ini</language>
	</languages>
	
    <params>   
		<param name="multi_mode" type="list" default="1" label="COM_TIENDA_MULTI_MODE" description="COM_TIENDA_MULTI_MODE_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="filter_category" type="list" default="1" label="COM_TIENDA_FILTER_BY_CATEGORY" description="COM_TIENDA_FILTER_BY_CATEGORY_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>	
		<param name="roottext" size="35" type="text" default="" label="COM_TIENDA_TEXT_FOR_ROOT_CATEGORY" description="COM_TIENDA_TEXT_FOR_ROOT_CATEGORY_DESC" />	
		<param name="filter_manufacturer" type="list" default="1" label="COM_TIENDA_FILTER_BY_MANUFACTURER" description="COM_TIENDA_FILTER_BY_MANUFACTURER_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>		
		<param name="filter_rating" type="list" default="1" label="COM_TIENDA_FILTER_BY_RATING" description="COM_TIENDA_FILTER_BY_RATING_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="filter_attributes" type="list" default="1" label="COM_TIENDA_FILTER_BY_ATTRIBUTES" description="COM_TIENDA_FILTER_BY_ATTRIBUTES_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="excluded_attributes" size="35" type="text" default="" label="COM_TIENDA_EXCLUDED_ATTRIBUTES" description="COM_TIENDA_EXCLUDED_ATTRIBUTES_DESC" />	
		<param name="filter_price" type="list" default="1" label="COM_TIENDA_FILTER_BY_PRICE" description="COM_TIENDA_FILTER_BY_PRICE_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>	
		<param name="attributes_case_insensitive" type="list" default="1" label="COM_TIENDA_ATTRIBUTES_CASE_INSENSITIVE" description="COM_TIENDA_ATTRIBUTES_CASE_INSENSITIVE_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="auto_price_range" type="list" default="1" label="COM_TIENDA_AUTOMATIC_PRICE_RANGE" description="COM_TIENDA_AUTOMATIC_PRICE_RANGE_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="price_range_set" size="50" type="text" default="" label="COM_TIENDA_PRICE_RANGE_INCREMENTS" description="COM_TIENDA_PRICE_RANGE_INCREMENTS_DESC" />		
	</params>    
    <params group="advanced">
		<param name="moduleclass_sfx" type="text" default="" label="MODULE CLASS SUFFIX" description="PARAMMODULECLASSSUFFIX" />
	</params>
</install>